FLASK_PORT=5001




# ===================================
# CONFIGURATION ENVIRONNEMENT
# ===================================
# Copier ce fichier en .env et modifier les valeurs

# ===================================
# API CONFIGURATION
# ===================================
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=false

# ===================================
# OCR CONFIGURATION
# ===================================
# Utiliser GPU si disponible (true/false)
USE_GPU=false

# Langues OCR (séparées par virgule)
OCR_LANGUAGES=en,fr

# Timeout OCR en secondes
OCR_TIMEOUT=30

# ===================================
# UPLOAD CONFIGURATION
# ===================================
# Taille maximale des fichiers (en MB)
MAX_UPLOAD_SIZE=10

# Extensions autorisées (séparées par virgule)
ALLOWED_EXTENSIONS=jpg,jpeg,png,bmp

# ===================================
# STORAGE CONFIGURATION
# ===================================
# Dossier de sortie pour les résultats
OUTPUT_DIR=outputs

# Dossier temporaire pour les uploads
TEMP_DIR=temp

# Conserver les fichiers temporaires (true/false)
KEEP_TEMP_FILES=false

# ===================================
# SECURITY
# ===================================
# Clé secrète API (générer une clé aléatoire en production)
API_SECRET_KEY=change-this-in-production-to-random-secret-key

# CORS Origins autorisées (séparées par virgule, * pour tous)
CORS_ORIGINS=*

# ===================================
# LOGGING
# ===================================
# Niveau de log (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Fichier de log
LOG_FILE=app.log

# ===================================
# PROCESSING
# ===================================
# Nombre maximum d'images en batch
MAX_BATCH_SIZE=10

# Rotation automatique (true/false)
AUTO_ROTATION=true

# ===================================
# DATABASE (Optionnel - si besoin futur)
# ===================================
# DATABASE_URL=sqlite:///./ocr_database.db
# DATABASE_URL=postgresql://user:password@localhost/dbname

# ===================================
# REDIS (Optionnel - pour cache)
# ===================================
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_DB=0
